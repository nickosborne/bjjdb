<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card text-bg-dark">
                    <img class="card-img-top" src="<%= position.image%>" alt="Card image cap">
                    <div class="card-img-overlay d-flex align-items-end">
                        <h1 class="text-center text-light">
                            <%= position.name %>
                        </h1>
                        <p class="text-center text-light"> <small>(<%= position.otherNames %>)</small></p>
                    </div>
                </div>
                <a class="card-link btn btn-warning" href="/positions/<%= position.id %>/edit">Edit</a>
                <form class="d-inline" action="/positions/<%= position._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
                <% if (currentUser) { %>
                    <button type="button" class="btn btn-primary" id="addSub">Primary</button>
                    <% } else { %>
                        <a class="btn btn-primary" href="/login" role="button">Link</a>
                        <% } %>
                            <form class="row form-floating mt-3" id="add-submission" action="/submissions/variations"
                                method="POST" hidden>
                                <div class="col form-floating">
                                    <select id="submission" class="form-select" name="variation[submission]">
                                        <% for (let sub of submissions) { %>
                                            <option value="<%=sub.id %>">
                                                <%= sub.name %>
                                            </option>
                                            <% } %>
                                    </select>
                                    <label for="submission">Submission</label>
                                </div>
                                <div class="col form-floating">
                                    <input class="form-control" type="text" id="name" name="variation[name]" required>
                                    <label class="form-label" for="name">Variation Name</label>
                                </div>
                                <div class="col form-floating">
                                    <input class="form-control" type="text" id="video" name="variation[video]" required>
                                    <label class="form-label" for="video">Video</label>

                                </div>
                                <input type="hidden" id="positionId" name="variation[position]"
                                    value="<%=position.id %>">
                                <div class="col">
                                    <button class="btn btn-success">Add</button>
                                </div>
                            </form>
                            <div class="card-body">
                                <ul class="nav nav-tabs" id="myTab" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link active" id="submissions-tab" data-bs-toggle="tab"
                                            data-bs-target="#submissions" type="button" role="tab"
                                            aria-controls="submissions" aria-selected="true">Submissions</button>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link" id="profile-tab" data-bs-toggle="tab"
                                            data-bs-target="#profile" type="button" role="tab" aria-controls="profile"
                                            aria-selected="false">Profile</button>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link" id="contact-tab" data-bs-toggle="tab"
                                            data-bs-target="#contact" type="button" role="tab" aria-controls="contact"
                                            aria-selected="false">Contact</button>
                                    </li>
                                </ul>
                                <div class="tab-content" id="myTabContent">
                                    <div class="tab-pane fade show active" id="submissions" role="tabpanel"
                                        aria-labelledby="submissions-tab">
                                        <ul class="list-group list-group-flush">
                                            <% for (let sub of subs) {%>
                                                <li class="list-group-item">
                                                    <div class="d-flex d-inline">
                                                        <a href="<%= sub.video %>"
                                                            class="list-group-item list-group-item-action"
                                                            target="_blank" rel="noopener noreferrer">
                                                            <%= sub.name %>
                                                        </a>
                                                        <a href="/submissions/<%=sub.submission %>"
                                                            class="list-group-item list-group-item-action justify-content-end">
                                                            Submission:
                                                            <%=sub.subName %>
                                                        </a>
                                                    </div>

                                                </li>
                                                <% } %>
                                        </ul>
                                    </div>
                                    <div class="tab-pane fade" id="profile" role="tabpanel"
                                        aria-labelledby="profile-tab">
                                        ...</div>
                                    <div class="tab-pane fade" id="contact" role="tabpanel"
                                        aria-labelledby="contact-tab">
                                        ...</div>
                                </div>
                            </div>
            </div>
        </div>
    </div>