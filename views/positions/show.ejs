<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">
            <%= position.name %>
        </h1>
        <small class="text-center mb-3">
            (<%= position.otherNames %>)
        </small>
        <div class="col-6 offset-3">
            <div class="card">
                <img class="card-img-top" src="<%= position.image%>" alt="Card image cap">
                <div class="card-body">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">Submissions</h5>
                        <button class="btn btn-success" id="hideForm">+</button>
                    </div>
                    <form action="/submissions" id="add-submission" method="GET" style="display: none"
                        class="form-inline mb-3">
                        <div class="form-group">
                            <input id="query" type="text" name="search" placeholder="Submission search..."
                                class="form-control">
                        </div>
                    </form>
                    <ul class="list-group">
                        <% for (let sub of position.submissions) {%>
                            <li class="list-group-item">
                                <%= sub.name %>
                            </li>
                            <% } %>
                    </ul>
                    <a class="card-link btn btn-warning" href="/positions/<%= position.id %>/edit">Edit</a>
                    <form class="d-inline" action="/positions/<%= position._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        
        document.getElementById('hideForm').addEventListener('click', () => {
            let form = document.getElementById('add-submission');
            console.log('success')
            if (form.style.display === 'none'){
                form.style.display = 'block';
            } else {
                form.style.display = 'none';
            }
        })
    </script>