<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card bg-dark">
                <img src="<%= position.image%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h1 class="text-center text-light">
                        <%= position.name %>
                    </h1>
                    <p class="text-center text-light"> <small>(<%= position.otherNames %>)</small></p>
                    <h2 class="text-light">Techniques</h2>
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <% for (let techType of techniqueTypes) { %>
                            <li class="nav-item" role="presentation">
                                <button class="nav-link" id="<%=techType %>-tab" data-bs-toggle="tab"
                                    data-bs-target="#<%=techType %>-tab-pane" type="button" role="tab"
                                    aria-controls="<%=techType %>-tab-pane" aria-selected="false">
                                    <%=techType %>
                                </button>
                            </li>
                            <% } %>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <% for (let techType of techniqueTypes) { %>
                            <div class="tab-pane fade" id="<%=techType %>-tab-pane" role="tabpanel"
                                aria-labelledby="<%=techType %>-tab" tabindex="0">
                                <table class="table text-light">
                                    <thead>
                                        <tr>
                                            <th scope="col">Name</th>
                                            <th scope="col">Side</th>
                                            <th scope="col">Video</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for (let tech of techniques) { %>
                                            <% if (tech.type==techType) { %>
                                                <tr>
                                                    <th scope="row">
                                                        <%= tech.name %>
                                                    </th>
                                                    <td>
                                                        <%= tech.side %>
                                                    </td>
                                                    <td><a class="btn btn-primary" href="<%= tech.video %>"
                                                            role="button" target="_blank"
                                                            rel="noopener noreferrer">Video</a>
                                                    </td>
                                                </tr>
                                                <% } %>
                                                    <% } %>
                                    </tbody>
                                </table>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>