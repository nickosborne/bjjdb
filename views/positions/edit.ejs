<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <h1>Edit Position</h1>
                <form action="/positions/<%= position._id %>?_method=PUT" method="POST" novalidate
                    class="validated-form">

                    <div class="form-group mb-3">
                        <label class="form-label" for="name">Name</label>
                        <input class="form-control" type="text" id="name" name="position[name]"
                            value="<%= position.name %>" required>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label" for="otherNames">Other Names</label>
                        <input class="form-control" type="text" id="otherNames" name="position[otherNames]"
                            value="<%= position.otherNames %>">
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label" for="image">Image</label>
                        <input class="form-control" type="text" id="image" name="position[image]"
                            value="<%= position.image %>" required>
                    </div>
                    <input type="hidden" id="edited" name="position[edited]" value="<%=position.edited%>">
                    <div class=" mb-3">
                        <button class="btn btn-success">Update Position</button>
                    </div>
                </form>
            </div>
        </div>
    </div>