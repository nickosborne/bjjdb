<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card bg-dark">
                <div class="card-body">
                    <div class="d-flex mb-3 text-light">
                        <div class="p-2 text-light">
                            <h3>
                                <%= group.name %>
                            </h3>
                        </div>

                        <div class="ms-auto p-2 text-light"><button type="button" class="btn btn-success"
                                id="addTechnique">Add</button>
                        </div>
                    </div>
                    <% if (currentUser) {%>
                        <%- include('../partials/addVariation')%>
                            <% } else {%>
                                <div class="alert alert-warning" role="alert" id="add-technique" hidden>
                                    You must be logged in!
                                </div>
                                <% } %>

                                    <table class="table text-light">
                                        <thead>
                                            <tr>
                                                <th scope="col">Name</th>
                                                <th scope="col">Position</th>
                                                <th scope="col">Side</th>
                                                <th scope="col">Type</th>
                                                <th scope="col"></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% for (let tech of techniques) { %>
                                                <tr>
                                                    <th scope="row">
                                                        <%= tech.name %>
                                                    </th>
                                                    <td>
                                                        <a href="/positions/<%= tech.position._id %>">
                                                            <%= tech.position.name %>
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <%= tech.side %>
                                                    </td>
                                                    <td>
                                                        <%= tech.type %>
                                                    </td>
                                                    <td>
                                                    <%-include('../partials/buttonGroup', {tech})%>
                                                    </td>
                                                </tr>
                                                <% } %>
                                        </tbody>
                                    </table>
                </div>
            </div>
        </div>