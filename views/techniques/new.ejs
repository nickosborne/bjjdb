<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">New Technique</h1>
        <div class="col-6 offset-3">
            <form action="/techniques" method="POST" novalidate class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name="technique[name]" required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="otherNames">Other Names</label>
                    <input class="form-control" type="text" id="otherNames" name="technique[otherNames]">
                </div>
                <div class="form-group mb-3">
                    <label class="form-label" for="side">Side</label>
                    <select class="form-control" id="side" name="technique[side]">
                        <option>Top</option>
                        <option>Bottom</option>
                    </select>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Technique</button>
                </div>
            </form>
        </div>
    </div>