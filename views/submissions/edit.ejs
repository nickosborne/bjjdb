<% layout('layouts/boilerplate') %>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <h1>Edit submission</h1>
                <form action="/submissions/<%= submission._id %>?_method=PUT" method="POST" novalidate
                    class="validated-form">
                    <div class="form-group mb-3">
                        <label class="form-label" for="name">Name</label>
                        <input class="form-control" type="text" id="name" name="submission[name]"
                            value="<%= submission.name %>" required>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label" for="otherNames">Other Names</label>
                        <input class="form-control" type="text" id="otherNames" name="submission[otherNames]"
                            value="<%= submission.otherNames %>">
                    </div>
                    <input type="hidden" id="subtype" name="submission[subType]" value="<%=submission.subType%>">
                    <div class=" mb-3">
                        <button class="btn btn-success">Update submission</button>
                    </div>
                </form>
            </div>
        </div>
    </div>