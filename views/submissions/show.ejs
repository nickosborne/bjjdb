<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">
            <%= sub.name %>
        </h1>
        <small class="text-center mb-3">
            <%= sub.otherNames %>
        </small>
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-body">

                    <h5>Variations</h5>
                    <div class="list-group">
                        <% for (let subvar of sub.subVars) {%>
                            <div class="list-group-item">
                                <h6>
                                    <%= subvar.name %>
                                </h6>
                                <ul class="list-group">
                                    <% for (let subimpl of subvar.subImpls) {%>
                                        <li class="list-group-item">
                                            <%= subimpl.position.name%>
                                                <div class="embed embed-responsive-16by9">
                                                    <iframe class="embed-responsive-item" src="<%= subimpl.video %> "
                                                        allowfullscreen></iframe>
                                                </div>
                                        </li>

                                        <% } %>
                                </ul>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>