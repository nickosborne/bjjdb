<% layout('layouts/boilerplate')%>
    <div class="container d-flex ms-5">
        <div class="row">
            <h1>All Submissions</h1>
            <% for (let submission of submissions) {%>
                <div class="card col-lg-2 col-md-4 col-sm-4 text-light bg-dark m-1">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%=submission.name %>
                        </h5>
                        <p>
                            <small>
                                <%=submission.otherNames %>
                            </small>
                        </p>
                        <a class="btn btn-secondary" href="/submissions/<%= submission._id %>"
                            class="card-link">Explore</a>
                    </div>
                </div>
                <% } %>
        </div>
    </div>